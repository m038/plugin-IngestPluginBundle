{% block feed_form %}

{% form_theme form 'NewscoopIngestPluginBundle:Form:_form_horizontal.html.twig' %}

{# Do not remove wrapper div #}
<div class="form_wrapper">

    {{ form_start(form, { 'attr': { 'class': 'form_feed form-horizontal'} }) }}

        {{ form_row(form.enabled) }}
        {{ form_row(form.name) }}
        {{ form_row(form.url) }}
        <span class="help-block col-sm-offset-2">{{ 'plugin.ingest.feeds.form.help.url'|trans }}</span>

        {{ form_row(form.parser) }}
        {{ form_row(form.mode) }}
        <span class="help-block col-sm-offset-2">
            {{ 'plugin.ingest.feeds.form.help.mode'|trans }}
        </span>

        {{ form_row(form.publication, {'attr' : {'class' : 'publication'} }) }}
        <span class="help-block col-sm-offset-2">
            {{ 'plugin.ingest.feeds.form.help.publication'|trans }}
        </span>

        {% if form.sections is defined %}
            {{ form_row(form.sections) }}

            <span class="help-block col-sm-offset-2">
                {{ 'plugin.ingest.feeds.form.help.section'|trans }}
            </span>
        {% endif %}

        <div class="col-sm-offset-2">
            {{ form_widget(form.save, {'attr' : {'class' : 'btn btn-primary'} }) }}
            {{ form_widget(form.cancel, {'attr' : {'class' : 'btn btn-default btn-js-click', 'data-url' : path('newscoop_ingestplugin_feed_list') } }) }}
        </div>

        {{ form_rest(form) }}

    {{ form_end(form) }}
</div>
{% endblock feed_form %}
